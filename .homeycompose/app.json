{
  "id": "com.chatgtp.assistent",
  "version": "1.0.0",
  "compatibility": ">=8.1.1",
  "sdk": 3,
  "platforms": ["local"],
  "name": {
    "en": "Homey Assistent"
  },
  "description": {
    "en": "This is a Homey assistant powered by ChatGPT."
  },
  "category": ["tools"],
  "brandColor": "#FE9C21",
  "permissions": [
    "homey:manager:api"
  ],
  "settings": [
    {
      "type": "group",
      "title": {
        "en": "API Configuration"
      },
      "children": [
        {
          "id": "telegramBotToken",
          "type": "password",
          "title": {
            "en": "Telegram Bot Token"
          },
          "value": "",
          "hint": {
            "en": "Enter your Telegram Bot Token here"
          }
        },
        {
          "id": "openaiApiKey",
          "type": "password",
          "title": {
            "en": "OpenAI API Key"
          },
          "value": "",
          "hint": {
            "en": "Enter your OpenAI API Key here"
          }
        }
      ]
    }
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Kjetil Vetlejord",
    "email": "decline27@gmail.com"
  },
  "tags": {
    "en": [
      "chatgpt",
      "assistant",
      "homey",
      "automation",
      "tools"
    ]
  },
  "bugs": {
    "url": "https://github.com/yourusername/yourapp/issues/"
  },
  "source": "https://github.com/yourusername/yourapp/",
  "contributing": {
    "donate": {
      "paypal": {
        "username": "yourpaypalusername"
      }
    }
  },
  "api": {
    "ping": {
      "method": "GET",
      "path": "/ping"
    },
    "getDevices": {
      "method": "GET",
      "path": "/devices"
    },
    "exposeDevice": {
      "method": "PUT",
      "path": "/devices/:id"
    },
    "unexposeDevice": {
      "method": "DELETE",
      "path": "/devices/:id"
    },
    "reset": {
      "method": "POST",
      "path": "/reset"
    }
  }
}
